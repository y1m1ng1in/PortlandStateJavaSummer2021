<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textReadmeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        style="@style/TextAppearance.App.Subtitle1"
        android:gravity="center"
        android:text="CS410/510 Advanced programming with Java Summer 2021, Project 5"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="24dp"></TextView>

    <TextView
        android:id="@+id/textReadmePara1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="This software provides users with a graphical user interface to create new appointments; search existing appointments by owner, or optionally filtered by begin time interval. This software stores appointments in persistent storage, so user won't lose their data when the software is closed, or paused."
        app:layout_constraintTop_toBottomOf="@+id/textReadmeTitle" />

    <TextView
        android:id="@+id/textCreateAppointmentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Create an appointment"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textReadmePara1" />

    <TextView
        android:id="@+id/textReadmePara2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:text="To create an appointment, press the CREATE button at the right bottom corner in the search appointment page. The software will bring users to create appointment page. When users are finished creating appointment, the software validates inputs from user and display error if any, otherwise the appointment will be stored to the persistent storage."
        app:layout_constraintTop_toBottomOf="@+id/textCreateAppointmentTitle" />

    <TextView
        android:id="@+id/textSearchAppointmentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Search appointments"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textReadmePara2" />

    <TextView
        android:id="@+id/textReadmePara3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:text="To search appointments by owner name, type the name to serach in the search bar in the search appointment page; or optionally, press the button at the right of the search bar to input time interval that appointment starts. All the appointments met the searching criteria will be displayed below the search bar."
        app:layout_constraintTop_toBottomOf="@+id/textSearchAppointmentTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>
